@model IEnumerable<Crud_Operations.Models.Transaction>
   

@{
    ViewData["Title"] = "Passbook";
}

<div class="jumbotron"><h1>PASSBOOK</h1></div>
	@*<h1>PASSBOOK</h1>*@





<table class="table table table-dark">
    <thead class="toast-header">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BenificiaryName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Date)
			</th>
            <th>
              @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                <a asp-action="AddOrEdit"  class="btn btn-success btn btn-block" ><i class="fa-solid fa-plus"></i> New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach(var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            <td>
                @Html.DisplayFor(modelItem => item.BenificiaryName)               
            </td>
		    <td>
					@Html.DisplayFor(modelItem => item.Date)
		    </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            
          <td>
              <div class="btn-group btn-group-sm">
                        <a asp-action="AddOrEdit" asp-route-id="@item.TransactionID"  class="btn btn-primary">
							<i class="fa-solid fa-pen-to-square"></i>Edit
						</a>

                        <form asp-action="Delete" asp-route-id="@item.TransactionID">
                            <button type="submit" class="btn btn-danger" 
                            onclick="return confirm('Are you sure to delete this record')">
								<i class="fa-solid fa-square-minus"></i>Delete
                            </button>
							
						    </form>
              </div>
               
          </td>
        </tr>
}
    </tbody>
</table>
